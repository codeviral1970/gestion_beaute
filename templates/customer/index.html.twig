{% extends 'base.html.twig' %}

{% block title 'Gestion | clients' %}

{% block body %}

<div class="container mx-auto mt-4">

    <div class="row">
    <div class="d-flex justify-content-between align-items-center">
        <div class="col">
        <a href="{{path('app_clients_new')}}" class="btn btn-outline-primary" id="add-customer">+</a>
        </div>
    </div>
    </div>
    
    <div class="row mt-4">
        <div class="d-flex justify-content-center">
        {{ knp_pagination_render(pagination) }}
        </div>
        {% for customer in pagination %}
        <div class="col-xxl-3 col-md-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title"></h5>
                    {% if customer.avatar %}
                    <img class="card-img-top" src="{{ vich_uploader_asset(customer, "imageFile") | imagine_filter('profile') }}" width="250" height="300" alt="Avatar">
                    {% else %}
                    <img src="{{asset('../build/images/avatar.jpg')}}" width="250" height="300" class="card-img-top" alt="avatar">
                    {% endif %}
                    <div class="card-body">
                        <h5 class="card-title">
                            <a href="{{path('app_client_show', {'id': customer.id })}}">
                                {{customer.firstName | capitalize}} {{customer.lastName | capitalize}}
                            </a>
                        </h5>
                        <a href="{{path('app_client_show', {'id': customer.id })}}" class="btn btn-outline-primary">Plus info</a>
                    </div>
                </div>
            </div>
        </div>
        {% endfor %}
    </div>
    <div class="d-flex justify-content-center">
        {{ knp_pagination_render(pagination) }}
    </div>
</div>
{% endblock %}