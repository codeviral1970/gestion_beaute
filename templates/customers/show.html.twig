{% extends 'base.html.twig' %}

{% block title %}Customers{% endblock %}

{% block body %}
<main id="main" class="main">
    <h1>Customers</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ customer.id }}</td>
            </tr>
            <tr>
                <th>FirstName</th>
                <td>{{ customer.firstName }}</td>
            </tr>
            <tr>
                <th>LastName</th>
                <td>{{ customer.lastName }}</td>
            </tr>
            <tr>
                <th>Address</th>
                <td>{{ customer.address }}</td>
            </tr>
            <tr>
                <th>ZipCode</th>
                <td>{{ customer.zipCode }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ customer.email }}</td>
            </tr>
            <tr>
                <th>Phone</th>
                <td>{{ customer.phone }}</td>
            </tr>
            <tr>
                <th>Avatar</th>
                <td>
                    <img src="{{ vich_uploader_asset(customer) | imagine_filter('avatar') }}" alt="">
                </td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_customers_index') }}" class="btn btn-secondary">back to list</a>

    <a href="{{ path('app_customers_edit', {'id': customer.id}) }}" class="btn btn-info">Editer</a>

    {{ include('customers/_delete_form.html.twig') }}
<main/>
{% endblock %}
