{% extends 'base.html.twig' %}

{% block title %}Compte de {{app.user.firstName}}{% endblock %}

{% block body %}
<section class="section profile">
    <div class="row">
        <div class="col-xl-4">
            <div class="card">
                <div class="card-body profile-card pt-4 d-flex flex-column align-items-center">

                    <img src="{{app.user.image}}" alt="Profile" class="rounded-circle">
                    {# <img src="{{ vich_uploader_asset(image, 'imageFile') | imagine_filter('avatar') }}" alt=""> #}
                    <h2>{{app.user.fullName}}</h2>
                    <div class="social-links mt-2">
                        <a href="#" class="twitter"><i class="bi bi-twitter"></i></a>
                        <a href="#" class="facebook"><i class="bi bi-facebook"></i></a>
                        <a href="#" class="instagram"><i class="bi bi-instagram"></i></a>
                        <a href="#" class="linkedin"><i class="bi bi-linkedin"></i></a>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-8">
            <div class="card">
                <div class="card-body pt-3">
                    <div class="card-title">Modifier votre mot de passe </div>

                    {% for message in app.flashes('warning') %}
                    <div class="alert alert-warning mt-4">
                        {{ message }}
                    </div>
                    {% endfor %}
                        
                    {{form(updatePasswordForm)}}
                        
                </div>
            </div>
        </div>
    </div>
</section>

{% endblock %}
