{% extends 'base.html.twig' %}

{% block title %}Compte de {{app.user.firstName}}{% endblock %}

{% block body %}
<section class="section profile">
    <div class="row">
        <div class="col-xl-4">
            <div class="card">
                <div class="card-body profile-card pt-4 d-flex flex-column align-items-center">

                    <img src="{{app.user.image}}" alt="Profile" class="rounded-circle"> 
                    {# <img src="{{ vich_uploader_asset(profile, 'imageFile') | imagine_filter('avatar') }}" class="rounded-circle" alt="">  #}
                    <h2>{{userAccount.fullName}}</h2>
                    <div class="social-links mt-2">
                        <a href="#" class="twitter"><i class="bi bi-twitter"></i></a>
                        <a href="#" class="facebook"><i class="bi bi-facebook"></i></a>
                        <a href="#" class="instagram"><i class="bi bi-instagram"></i></a>
                        <a href="#" class="linkedin"><i class="bi bi-linkedin"></i></a>
                    </div>
                </div>
            </div>
        </div>

        {% for message in app.flashes('warning') %}
            <div class="alert alert-warning mt-4">
                {{ message }}
            </div>
        {% endfor %}


        <div class="col-xl-8">
            <div class="card">
                <div class="card-body pt-3">
                    <!-- Bordered Tabs -->
                    <ul class="nav nav-tabs nav-tabs-bordered">

                        <li class="nav-item">
                        <button class="nav-link active" data-bs-toggle="tab" data-bs-target="#profile-overview">Info profile</button>
                        </li>

                        <li class="nav-item">
                        <button class="nav-link" data-bs-toggle="tab" data-bs-target="#profile-edit">Modifier mon profile</button>
                        </li>

                    </ul>

                    <div class="tab-content pt-2">
                        <div class="tab-pane fade show active profile-overview" id="profile-overview">
                            <h5 class="card-title">Profile Details</h5>

                            <div class="row">
                                <div class="col-lg-3 col-md-4 label ">Prénom</div>
                                <div class="col-lg-9 col-md-8">{{userAccount.firstName}}</div>
                            </div>

                            <div class="row">
                                <div class="col-lg-3 col-md-4 label">Nom</div>
                                <div class="col-lg-9 col-md-8">{{userAccount.lastName}}</div>
                            </div>

                            <div class="row">
                                <div class="col-lg-3 col-md-4 label">Adresse</div>
                                <div class="col-lg-9 col-md-8"></div>
                            </div>

                            <div class="row">
                                <div class="col-lg-3 col-md-4 label">code postal</div>
                                <div class="col-lg-9 col-md-8"></div>
                            </div>

                            <div class="row">
                                <div class="col-lg-3 col-md-4 label">Email</div>
                                <div class="col-lg-9 col-md-8">{{userAccount.email}}</div>
                            </div>

                            <div class="row">
                                <div class="col-lg-3 col-md-4 label">Téléphone</div>
                                <div class="col-lg-9 col-md-8"></div>
                            </div>

                        </div>

                        <div class="tab-pane fade profile-edit pt-3" id="profile-edit">
                            <!-- Profile Edit Form -->
                            {{form_start(form)}}
                                <div class="row mb-3">
                                <label for="profileImage" class="col-md-4 col-lg-3 col-form-label">Profile Image</label>
                                <div class="col-md-8 col-lg-9">
                                    <img src="assets/img/profile-img.jpg" alt="Profile">
                                    {{form_row(form.imageFile)}}
                                    <div class="pt-2">
                                    <a href="#" class="btn btn-primary btn-sm" title="Upload new profile image"><i class="bi bi-upload"></i></a>
                                    <a href="#" class="btn btn-danger btn-sm" title="Remove my profile image"><i class="bi bi-trash"></i></a>
                                    </div>
                                </div>
                                </div>

                                <div class="row mb-3">
                                <label for="fullName" class="col-md-4 col-lg-3 col-form-label">Nom</label>
                                <div class="col-md-8 col-lg-9">
                                    {{form_row(form.lastName)}}
                                </div>
                                </div>

                                <div class="row mb-3">
                                <label for="about" class="col-md-4 col-lg-3 col-form-label">Prénom</label>
                                <div class="col-md-8 col-lg-9">
                                    {{form_row(form.firstName)}}
                                </div>
                                </div>

                                <div class="row mb-3">
                                    <label for="company" class="col-md-4 col-lg-3 col-form-label">Email</label>
                                    <div class="col-md-8 col-lg-9">
                                    {{form_row(form.email)}}
                                    </div>
                                </div>

                                <div class="row mb-3">
                                <label for="Address" class="col-md-4 col-lg-3 col-form-label">Adresse</label>
                                <div class="col-md-8 col-lg-9">
                                    <input name="address" type="text" class="form-control" id="Address" value="A108 Adam Street, New York, NY 535022">
                                </div>
                                </div>

                                <div class="row mb-3">
                                <label for="Phone" class="col-md-4 col-lg-3 col-form-label">Code postal</label>
                                <div class="col-md-8 col-lg-9">
                                    <input name="phone" type="text" class="form-control" id="Phone" value="(436) 486-3538 x29071">
                                </div>
                                </div>

                                <div class="row mb-3">
                                <label for="Email" class="col-md-4 col-lg-3 col-form-label">Téléphone</label>
                                <div class="col-md-8 col-lg-9">
                                    <input name="email" type="email" class="form-control" id="Email" value="k.anderson@example.com">
                                </div>
                                </div>

                                <div class="text-center">
                                    {{form_row(form.submit)}}
                                </div>
                            </form><!-- End Profile Edit Form -->
                        </div>

                    </div><!-- End Bordered Tabs -->
                </div>
            </div>
        </div>
    </div>
</section>
{% endblock %}
